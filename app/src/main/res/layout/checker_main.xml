<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.homepc.projectapp.MainActivity">


    <TextView
        style = "@style/GreenText"
        android:text="Device ID"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        style="@style/GrayText"
        android:text="Wave Height"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turbidity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/waveheight" />

    <TextView
        style="@style/GrayText"
        android:text="Wave Period"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waveheight"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/waveperiod" />

    <TextView
        style="@style/GrayText"
        android:text="Battery Life"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waveperiod"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/battery"
         />

    <TextView
        style="@style/GrayText"
        android:text="Turbidity"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/turbidity"
        android:layout_below="@+id/watertemp"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/GrayText"
        android:text="Water Temperature"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/watertemp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="51dp"
        android:id="@+id/progressBar"
        android:progress="80"
        android:progressDrawable="@drawable/circular"
        android:layout_alignTop="@+id/watertemp"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="51dp"
        android:id="@+id/progressBar1"
        android:progress="80"
        android:progressDrawable="@drawable/circular"
        android:layout_alignTop="@+id/watertemp"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="51dp"
        android:id="@+id/progressBar2"
        android:progress="80"
        android:progressDrawable="@drawable/circular"
        android:layout_alignTop="@+id/turbidity"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="51dp"
        android:id="@+id/progressBar3"
        android:progress="80"
        android:progressDrawable="@drawable/circular"
        android:layout_alignTop="@+id/waveheight"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="51dp"
        android:id="@+id/progressBar4"
        android:progress="80"
        android:progressDrawable="@drawable/circular"
        android:layout_alignTop="@+id/waveperiod"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="51dp"
        android:id="@+id/progressBar5"
        android:progress="80"
        android:progressDrawable="@drawable/circular"
        android:layout_alignTop="@+id/battery"
        android:layout_alignParentEnd="true" />

    <TextView
        style="@style/GrayText"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/progressBar"

        android:layout_alignStart="@+id/progressBar" />

    <TextView
        style="@style/GrayText"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/progressBar2"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/watertemp" />

    <TextView
        style="@style/GrayText"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_below="@+id/progressBar3"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        style="@style/GrayText"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/progressBar4"
        android:layout_alignStart="@+id/progressBar4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        style="@style/GrayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/progressBar5"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView4" />


</RelativeLayout>
